{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"
                },
                {
                    "key": "Pragma",
                    "value": "no-cache"
                },
                {
                    "key": "Expires",
                    "value": "0"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "headers": {
                "cache-control": "no-cache, no-store, must-revalidate",
                "pragma": "no-cache"
            },
            "continue": true
        }
    ]
}